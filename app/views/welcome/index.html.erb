<% if logged_in? %>
  <h1>Welcome to Instagram <%=current_user.full_name%> (<%=current_user.retrieve_handle%>)</h1>
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <%= render 'posts/form', post: @post %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <% if @posts.blank? %>
        <p class="text-center">You haven't uploaded any images yet!</p>
      <% else %>
        <% @posts.each do |post| %>
          <%= render 'posts/post', post: post, url: "/posts/#{post.id}/new_comment_feed", like_path: "/posts/#{post.id}/toggle_like_feed" %>

        <% end %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <h1>Welcome to Instagram Lite!</h1>
      <p>Sign up or log in to get started!</p>
    </div>
  </div>
<% end %>